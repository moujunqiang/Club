    <ScrollView
        android:id="@+id/id_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="155dp">

                <include
                    layout="@layout/input_register_club_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-6dp"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:id="@+id/register1"
                    android:layout_width="273dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="350dp"
                    android:layout_marginEnd="167dp"
                    android:background="@drawable/selector_text_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="15dip"
                    android:paddingTop="2dip"
                    android:paddingRight="15dip"
                    android:paddingBottom="2dip"
                    android:text="Reigster"
                    android:textColor="@animator/selector_text_press_color"
                    android:textSize="20sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/registerUser1"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:padding="0dp"
                        android:text="User "
                        android:textColor="@drawable/selector_bt_text"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="#000000"
                        android:textSize="30sp" />


                    <Button
                        android:id="@+id/registerClub1"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start"
                        android:padding="0dp"
                        android:text=" club"
                        android:textColor="@drawable/selector_bt_text"
                        android:textSize="25sp" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/club1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Create Account For Club"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/club1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"

                android:gravity="center"
                android:text="CLUB"
                android:textColor="#000000"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/ib_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/in_return"></ImageButton>

